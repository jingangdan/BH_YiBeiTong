<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/activity_base"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#a2cb34"
        app:tabSelectedTextColor="#a2cb34">

    </android.support.design.widget.TabLayout>

    <com.bh.yibeitong.view.NoScrollViewPager
        android:id="@+id/vp_login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.bh.yibeitong.view.NoScrollViewPager>

</LinearLayout>
