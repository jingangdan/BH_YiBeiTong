<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_base"/>

    <LinearLayout
        android:id="@+id/lin_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_ql_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="输入手机号手机号"
                android:inputType="number"
                android:maxLength="20"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_ql_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="20"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"></EditText>

            <Button
                android:textSize="12dp"
                style="@style/button_style"
                android:id="@+id/but_ql_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取验证码" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercode_layout"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/but_ql_login"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape"
                android:text="登录"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
