<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_so_posttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送达时间"
            android:textColor="#a2cb34" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_so_buyeraddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buyeraddress"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_so_buyername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="buyername"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_item_so_dno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="dno" />

        <TextView
            android:id="@+id/tv_item_so_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="第一次下单"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_item_so_addcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_so_payresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="payresult"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_item_so_allcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="allcost"
                android:textColor="#FF6E6E" />


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_item_so"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_item_so_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/but_item_so_ok"
                style="@style/button_style"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="确认有效" />

            <Button
                android:id="@+id/but_item_so_no"
                style="@style/button_style_red"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="确认无效" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_item_so_waitsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/but_item_so_send"
                style="@style/button_style_red"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="确认发货" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
