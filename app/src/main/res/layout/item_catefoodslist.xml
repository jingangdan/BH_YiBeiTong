<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_goods_img"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@mipmap/ic_adai" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_goods_name"
                style="@style/setting_text"
                android:text="名称"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_item_goods_sellcount"
                style="@style/setting_text"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="销量" />

            <TextView
                android:id="@+id/tv_item_goods_price"
                style="@style/setting_text"
                android:text="价格"
                android:textColor="#F92621" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:focusable="false"
                android:id="@+id/but_item_goods_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="进入商家"
                android:textColor="#a2cb34"
                android:textSize="12dp"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
