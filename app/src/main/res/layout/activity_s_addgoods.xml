<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0">
    
    <include layout="@layout/activity_base"/>
    
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_s_addgoods_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_adai"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="商品分类：" />

        <EditText
            android:id="@+id/et_s_addgoods_classify"
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写商品分类"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/test_cursor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="商品名称：" />

        <EditText
            android:id="@+id/et_s_addgoods_name"
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写商品名称"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/test_cursor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="打包费：" />

        <EditText
            android:id="@+id/et_s_addgoods_bagcost"
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写分打包费"
            android:inputType="number"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/test_cursor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="商品数量：" />

        <EditText
            android:id="@+id/et_s_addgoods_count"
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写商品数量"
            android:inputType="number"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/test_cursor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="商品价格：" />

        <EditText
            android:id="@+id/et_s_addgoods_cost"
            style="@style/setting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="left"
            android:hint="请填写商品价格"
            android:inputType="number"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/test_cursor" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/but_s_goods_ok"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="提交"
            android:background="#FF9D07"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/but_s_goods_no"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="取消"
            android:background="#E1E1E1"/>

    </LinearLayout>

</LinearLayout>
