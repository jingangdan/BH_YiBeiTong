<?xml version="1.0" encoding="utf-8"?><!--分类-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--first-->
            <LinearLayout
                android:id="@+id/lin_directly_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#fff">

                <include layout="@layout/view_tenpx"></include>

                <TextView
                    android:id="@+id/tv_first_all"
                    style="@style/title_second_text"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:text="直营" />

                <include layout="@layout/view_tenpx"></include>

            </LinearLayout>

            <!--second-->
            <LinearLayout
                android:id="@+id/lin_directly_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <include layout="@layout/view_tenpx"></include>

                <TextView
                    android:id="@+id/tv_second_all"
                    style="@style/title_second_text"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:text="默认" />

                <include layout="@layout/view_tenpx"></include>



            </LinearLayout>

            <!--third-->
            <LinearLayout
                android:id="@+id/lin_directly_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#fff">

                <include layout="@layout/view_tenpx"></include>

                <TextView
                    android:id="@+id/tv_third_all"
                    style="@style/title_second_text"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:text="不限" />

                <include layout="@layout/view_tenpx"></include>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!---->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>
