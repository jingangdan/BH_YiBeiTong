<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_item_sc_img"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:src="@mipmap/ic_adai" />

        <TextView
            android:id="@+id/tv_item_sc_gname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品名称" />

        <TextView
            android:id="@+id/tv_item_sc_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="价格" />

        <ImageView
            android:id="@+id/iv_item_sc_sub"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/new_sub" />

        <TextView
            android:id="@+id/tv_item_sc_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0" />

        <ImageView
            android:id="@+id/iv_item_sc_add"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/new_add" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#F0F0F0"/>

</LinearLayout>
