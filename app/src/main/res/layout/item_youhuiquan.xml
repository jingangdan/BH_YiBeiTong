<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#999"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_yhq_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱"
            android:textSize="32dp"
            android:textColor="#fff"/>

        <TextView
            style="@style/setting_text"
            android:id="@+id/tv_item_yhq_limitcost"
            android:text="满多少能用"
            android:textColor="#fff"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            style="@style/setting_text"
            android:id="@+id/tv_item_yhq_title"
            android:text="券名称"
            android:textColor="#000"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            style="@style/setting_text"
            android:id="@+id/tv_item_yhq_data"
            android:text="日期"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/but_item_yhq_status"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/button_white_shape"
            android:text="状态"
            android:textColor="#999"/>

    </LinearLayout>


</LinearLayout>
