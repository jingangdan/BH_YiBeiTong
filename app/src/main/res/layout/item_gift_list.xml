<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/goodshape"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_item_gift"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_adai" />

        <TextView
            android:id="@+id/tv_item_gift_name"
            style="@style/setting_text"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="名称"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gift_jifen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="100积分"
                android:textColor="#FA4C0F"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_gift_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_red_shape"
                android:padding="5dp"
                android:text="我要兑换"
                android:textColor="#fff"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
