<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_item_oc_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_adai" />

        <TextView
            android:id="@+id/tv_item_oc_title"
            style="@style/setting_text"
            android:text="商品名称"
            android:textColor="#000" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#ccc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center|left">

        <TextView
            style="@style/setting_text"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="描述相符" />

        <RatingBar
            android:id="@+id/rb_order_comment"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_shape">

            <EditText
                android:id="@+id/et_item_order_comment"
                style="@style/setting_text"
                android:layout_width="match_parent"
                android:gravity="top"
                android:hint="您的意见很重要，请点评一下吧"
                android:maxLines="10"
                android:minLines="4" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>


